<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayNameActivity">
    <TextView
            android:text="ようこそ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textViewName"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            app:layout_constraintStart_toEndOf="@+id/textViewWelcome" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textViewHonorific"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewWelcome" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <TextView
            android:text="さん"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/textViewHonorific"
            app:layout_constraintStart_toEndOf="@+id/textViewName" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewWelcome" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>